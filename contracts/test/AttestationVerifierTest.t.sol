pragma solidity ^0.8.13;

import {Test, console} from "forge-std/Test.sol";
import {AttestationVerifier} from "../src/core/AttestationVerifier.sol";

contract AttestationVerifierTest is Test {
    AttestationVerifier public verifier;

    function setUp() public {
        verifier = new AttestationVerifier(vm.envAddress("AUTOMATA_DCAP_ATTESTATION"), false);
        verifier.setMrEnclave(0xed62977ef4a2771868d8b83ab4e0d5650a4040a92af46d0444c4acc5ba55b073, true);
        verifier.setMrSigner(0x83d719e77deaca1470f6baf62a4d774303c899db69020f9c70ee1dfc08c7ce9e, true);
    }

    function test_attestation() public {
        bytes memory report;
        bytes32 data;

        report = hex"";
        data = 0x6049d682ccdb8ac0dac63803f336deda020f9cdd9228697490bc5574dd2fe48e;
        verifier.verifyAttestation(report, data);

        report = hex"";
        data = 0x35c8f6377cc048d6e3e3a48b4023cb0f416443a8690e99c3b3165c9ecfdf2363;
        verifier.verifyAttestation(report, data);
    }
}
